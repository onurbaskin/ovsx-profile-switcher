{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "compile",
			"type": "shell",
			"command": "bun",
			"args": ["run", "compile"],
			"problemMatcher": "$tsc",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"presentation": {
				"reveal": "silent"
			}
		},
		{
			"label": "watch",
			"type": "shell",
			"command": "bun",
			"args": ["run", "watch"],
			"problemMatcher": "$tsc-watch",
			"isBackground": true,
			"group": {
				"kind": "build",
				"isDefault": false
			},
			"presentation": {
				"reveal": "silent"
			}
		}
	]
}

